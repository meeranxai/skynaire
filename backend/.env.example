# ================================
# G-Network Backend Environment Configuration
# ================================

# ================================
# ENVIRONMENT
# ================================
NODE_ENV=production
PORT=5000

# ================================
# FRONTEND CONFIGURATION
# ================================
FRONTEND_URL=https://your-frontend.vercel.app

# ================================
# DATABASE
# ================================
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/gnetwork?retryWrites=true&w=majority

# ================================
# FIREBASE ADMIN SDK
# ================================
# Get this from Firebase Console > Project Settings > Service Accounts
# Download the JSON file and either:
# 1. Store the entire JSON as a string in this variable, OR
# 2. Use individual fields below
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id",...}

# Alternative: Individual Firebase fields
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYour-private-key\n-----END PRIVATE KEY-----
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# ================================
# AI CONFIGURATION (Groq)
# ================================
GROQ_API_KEY=gsk_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GROQ_MODEL=llama-3.3-70b-versatile
AI_TEMPERATURE=0.3
AI_MAX_TOKENS=1200
AI_CACHE_TTL=3600
AI_RETRY_ATTEMPTS=3
AI_RETRY_DELAY=1000
AI_ENABLE_CACHE=true
AI_ENABLE_LOGGING=true

# ================================
# GOOGLE GENERATIVE AI (Gemini)
# ================================
GOOGLE_API_KEY=your_google_api_key_here

# ================================
# SECURITY & SESSION
# ================================
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# FILE UPLOAD
# ================================
MAX_FILE_SIZE=100000000
UPLOAD_PATH=./uploads

# ================================
# CORS CONFIGURATION
# ================================
CORS_ORIGIN=https://your-frontend.vercel.app

# ================================
# EMAIL (Optional - for notifications)
# ================================
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_app_password

# ================================
# LOGGING
# ================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# ================================
# FEATURE FLAGS
# ================================
ENABLE_AI_ANALYSIS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=false

# ================================
# CLOUDINARY (Optional - for media storage)
# ================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ================================
# REDIS (Optional - for caching)
# ================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
